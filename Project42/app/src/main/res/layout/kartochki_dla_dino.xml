<?xml version="1.0" encoding="utf-8"?>
<!--ЭТО КАРТОЧКИ , ИСПОЛЬЗУЕМ CardView-->


<!--cardElevation    - эфект тени-->
<!--cardCornerRadius - заокругление углов-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

<!--    LinearLayout ДЛЯ ОТОБРАЖЕНИЯ ИНФОРМАЦИИ ВНИЗУ-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_dinozavra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title_dinozavra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:textSize="17sp"/>

<!--        <TextView-->
<!--            android:id="@+id/description_dinozavra"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="4dp"-->
<!--            android:layout_marginBottom="4dp"-->
<!--            android:text="Здесь будет оисание"/>-->

    </LinearLayout>

</android.support.v7.widget.CardView>